<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:text="@string/station_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/station_city"
        android:layout_below="@+id/station_name"
        android:layout_alignLeft="@+id/station_name"
        android:layout_alignStart="@+id/station_name" />

    <TextView
        android:text="@string/station_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/station_region"
        android:layout_below="@+id/station_city"
        android:layout_alignLeft="@+id/station_city"
        android:layout_alignStart="@+id/station_city" />

    <TextView
        android:text="@string/station_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/station_country"
        android:layout_below="@+id/station_region"
        android:layout_alignLeft="@+id/station_region"
        android:layout_alignStart="@+id/station_region" />

    <TextView
        android:text="@string/station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:id="@+id/station_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>